---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import BackToPrev from "@components/BackToPrev.astro";
import ArrowCard from "@components/ArrowCard.astro";
import { SITE } from "@consts";

export async function getStaticPaths() {
  const highlights = (await getCollection("highlights"))
    .filter(highlight => !highlight.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return highlights.map((highlight) => ({
    params: { slug: highlight.slug },
    props: highlight,
  }));
}
type Props = CollectionEntry<"highlights">;

const highlight = Astro.props;
const { Content } = await highlight.render();

// Get other highlights to show at the bottom
const allHighlights = (await getCollection("highlights"))
  .filter(h => !h.data.draft && h.slug !== highlight.slug)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Article schema for structured data
const siteUrl = "https://alanmcginnis.com";
const articleUrl = new URL(`/highlights/${highlight.slug}`, siteUrl).href;
const articleImage = highlight.data.image 
  ? new URL(highlight.data.image, siteUrl).href 
  : undefined;

// Convert date to ISO 8601 format
const datePublished = highlight.data.date.toISOString();

// Get article body as plain text (strip markdown formatting)
let articleBody = highlight.data.description;
if (highlight.body) {
  // Convert markdown body to plain text by stripping markdown syntax
  articleBody = highlight.body
    .replace(/^#+\s+/gm, "$1") // Remove headers
    .replace(/\*\*(.*?)\*\*/g, "$1") // Remove bold
    .replace(/\*(.*?)\*/g, "$1") // Remove italic
    .replace(/\[([^\]]+)\]\([^)]+\)/g, "$1") // Remove links, keep text
    .replace(/!\[([^\]]*)\]\([^)]+\)/g, "$1") // Remove images
    .replace(/`([^`]+)`/g, "$1") // Remove inline code
    .replace(/```[\s\S]*?```/g, "$1") // Remove code blocks
    .replace(/^[-*+]\s+/gm, "$1") // Remove list markers
    .replace(/^\d+\.\s+/gm, "$1") // Remove numbered list markers
    .replace(/>\s+/g, "$1") // Remove blockquote markers
    .trim();
}

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  headline: highlight.data.title,
  description: highlight.data.description,
  datePublished: datePublished,
  author: {
    "@type": "Person",
    name: SITE.NAME,
    url: siteUrl,
  },
  publisher: {
    "@type": "Person",
    name: SITE.NAME,
    url: siteUrl,
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": articleUrl,
  },
  ...(articleImage && { image: articleImage }),
  articleBody: articleBody,
};
---

<PageLayout title={highlight.data.title} description={highlight.data.description} image={highlight.data.image} structuredData={articleSchema}>
  <Container>
    <div>
      <BackToPrev href="/">
        Back to home
      </BackToPrev>
    </div>
    <article class="mt-10">
      <h1 class="text-2xl font-semibold text-black dark:text-white mb-10">
        {highlight.data.title}
      </h1>
      <div class="prose prose-stone dark:prose-invert max-w-none">
        <Content />
      </div>
    </article>

    {allHighlights.length > 0 && (
      <div class="mt-16 space-y-4">
        <h2 class="text-xl font-semibold text-black dark:text-white">
          Other Highlights
        </h2>
        <ul class="flex flex-col gap-4">
          {allHighlights.map((otherHighlight) => (
            <li>
              <ArrowCard entry={otherHighlight} />
            </li>
          ))}
        </ul>
      </div>
    )}
  </Container>
</PageLayout>