---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
// import FormattedDate from "@components/FormattedDate.astro";
// import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import ArrowCard from "@components/ArrowCard.astro";

export async function getStaticPaths() {
  const highlights = (await getCollection("highlights"))
    .filter(highlight => !highlight.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return highlights.map((highlight) => ({
    params: { slug: highlight.slug },
    props: highlight,
  }));
}
type Props = CollectionEntry<"highlights">;

const highlight = Astro.props;
const { Content } = await highlight.render();

// Get other highlights to show at the bottom
const allHighlights = (await getCollection("highlights"))
  .filter(h => !h.data.draft && h.slug !== highlight.slug)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<PageLayout title={highlight.data.title} description={highlight.data.description} image={highlight.data.image}>
  <Container>
    <div class="animate">
      <BackToPrev href="/">
        Back to home
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <!-- <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={highlight.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(highlight.body)}
        </div>
      </div> -->
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {highlight.data.title}
      </div>
    </div>
    <article class="animate prose prose-stone dark:prose-invert max-w-none">
      <Content />
    </article>

    {allHighlights.length > 0 && (
      <div class="animate mt-16 space-y-4">
        <h5 class="font-semibold text-black dark:text-white">
          Other Highlights
        </h5>
        <ul class="flex flex-col gap-4">
          {allHighlights.map((otherHighlight) => (
            <li>
              <ArrowCard entry={otherHighlight} />
            </li>
          ))}
        </ul>
      </div>
    )}
  </Container>
</PageLayout>